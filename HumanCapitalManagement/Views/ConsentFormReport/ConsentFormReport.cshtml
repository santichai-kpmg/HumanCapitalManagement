@section scripts{
    <script src="~/Scripts/plugins/knockout-3.4.2.js"></script>
    <script src="~/Scripts/plugins/knockout.mapping-latest.js"></script>
    <script src="~/Scripts/plugins/DataTables2/datetimeSort.js"></script>
    <script src="~/Scripts/plugins/jsLinq/linq.min.js"></script>
    <script src="~/Scripts/plugins/jsLinq/jquery.linq.min.js"></script>

    <script type="text/javascript">
        var objModel = @Html.Raw(Json.Encode(Model));
        var sUrlBack = '@Url.Action("ConsentForm", "Consent")';

        $(function () {
            SetTable();
            if (objModel.lstData != null) {
                SetTable();
                BindData(objModel);
                ko.applyBindings(viewModel);
            }
        });

     function View(sVal) {
                BlockUI();
                window.location.href = '@Url.Action("ConsentFrom_View", "ConsentFormReport")?id=' + sVal;
    }
    function SetTable() {
        var objHeadClRequest = [
            { "title": "Id", "width": "5%", "className": "dt-center-ctm", "searchable": false, "data": "Id", "visible": false },
            { "title": "View", "width": "5%", "className": "dt-center-ctm", "searchable": false, "orderable": false, "data": "View" },
            { "title": "User Name", "width": "40%", "className": "dt-center-ctm", "data": "Name_user" },
            { "title": "Consent Form Name", "width": "35%", "className": "dt-center-ctm", "data": "Name" },
            { "title": "Created Date", "width": "15%", "className": "dt-center-ctm", "data": "Create_Date" },

            @*{ "title": "Complete", "width": "15%", "className": "dt-center-ctm", "data": "Active_status", "searchable": false, "orderable": false },*@
        ];

        var objTableRe = {
            sTableID: "gvwData",
            nDis: [],
            sProperty: "<'top col-md-6'l>rt<'bottom col-md-6'fi><'bottom col-md-6 text-right'p><'clear'>",//length pangging
            objHeadCl: objHeadClRequest,//Table Headder
            objDataSet: [], //dataset
            nHeadFix: 0,// fix clr
            EmptyTable: EmptyTable,
            order: [[0, "DESC"]],
            objBeforeClRender: false,
        };

        var table = CreatTableJS(objTableRe);
        //new $.fn.dataTable.FixedHeader($('#gvwData'));
    }

        function Cancel() {
            window.location.href = sUrlBack;
            location.reload();
        }

        function Search() {
            var lstSearch = ko.toJS(viewModel)
            lstSearch = $("#ConsentFormName").val();
            return lstSearch;
        }
    function StartForm()
    {
        var sVal = GetValDropdown("ConsentFormName");
        if (sVal != undefined && sVal != null && sVal != "") {
            BlockUI();
            SetTable();
            var Param = Search();
            @*window.location.href = '@Url.Action("LoadDataSearch", "ConsentFormReport")?id=' + sVal;*@
           @* $('#gvwData').DataTable().columns.adjust().draw();*@
            BlockUI();
            $.ajax({
                dataType: AjaxCall.dataType,
                type: AjaxCall.type,
                contentType: AjaxCall.contentType,
                url: '@Url.Action("LoadDataSearch", "ConsentFormReport")',
                data: JSON.stringify({ id: Param }),

                success: function (response) {
                    if (response.result.Status == SysProcess.SessionExpired) {
                        PopupLogin('@Url.Action("Index", "Home")');
                    }
                    else if (response.result.Status == SysProcess.Success) {
                        var lstData = response.result.objData;
                        if (lstData == undefined || lstData.length <= 0) {
                            //   $('div[id$=divTable]').collapse("show");
                            $('#gvwData').DataTable().clear().draw();
                            $('#gvwData').dataTable().fnDraw();
                            $('#gvwData').DataTable().columns.adjust().draw();
                        }
                        else {
                            //  $('div[id$=divTable]').collapse("show");
                            $('#gvwData').DataTable().clear().draw();
                            $('#gvwData').dataTable().fnAddData(lstData);
                            $('#gvwData').dataTable().fnDraw();
                            $('#gvwData').DataTable().columns.adjust().draw();
                        }
                    }
                    else if (response.result.Status == SysProcess.Failed)
                    {
                        DialogWarning(DialogHeader.Warning, response.result.Msg);
                        $('#gvwData').DataTable().clear().draw();
                        $('#gvwData').dataTable().fnDraw();
                        $('#gvwData').DataTable().columns.adjust().draw();
                    }
                    else
                    {
                        $('#gvwData').DataTable().clear().draw();
                        $('#gvwData').dataTable().fnDraw();
                        $('#gvwData').DataTable().columns.adjust().draw();
                    }
                },
                complete: function (jqXHR, status) {//finaly
                    $('#gvwData').DataTable().columns.adjust().draw();
                    $('#gvwData').DataTable().columns.adjust().responsive.recalc();
                    UnblockUI();
                }
            });
        }
        else {
            $("#SelectValue").modal();
            @*wait for Modal --> Please Select Consent Form Name*@
        }
    }
    </script>

    <script type="text/javascript">
        var viewModel = {

        };
        function ViewModel() {
            var self = this;
            self.conditionChecked = ko.observable(false);
            self.loadCondition = function () {
                //ajax request to get condition value. Suppose ajax request returned value "used". so
                self.conditionChecked("used");
            }
            self.loadCondition();
            ko.bindingHandlers.iCheck = { // integrating icheck plugin using bh

                init: function (element, valueAccessor) {
                    var ctrl = $(element);
                    var sID = ctrl[0].id;
                    //initialize icheck to the element
                    $(element).iCheck({
                        radioClass: 'iradio_flat-green'
                    });
                    $(element).on('ifChecked', function (event) {

                        var observable = valueAccessor();
                        observable.checked(event.target.defaultValue); //assigning selected value

                    });
                },
                update: function (element, valueAccessor) {
                    var observable = valueAccessor();
                }
            };
        }
        function BindData(value) {
            if (viewModel.name == undefined) {
                viewModel = ko.mapping.fromJS(value);
                ViewModel();
                $("input[id*=rdlStatus][value=" + value.active_status + "]").iCheck('check');
            }
            else {
                ko.mapping.fromJS(value, {}, viewModel);
                $("input[id*=rdlStatus][value=" + value.active_status + "]").iCheck('check');
            }
            if (objModel.objData != undefined && objModel.objData != null) {
                $('#gvwData').DataTable().clear().draw();
                $('#gvwData').dataTable().fnAddData(objModel.objData);
                $('#gvwData').dataTable().fnDraw();

                setTimeout(function () {
                    $('#gvwData').DataTable().columns.adjust().draw();
                    $('#gvwData').DataTable().columns.adjust().responsive.recalc();
                }, 500);
            }
            else {
                $('#gvwData').DataTable().clear().draw();
                $('#gvwData').dataTable().fnDraw();
                $('div[id$=divTable]').collapse("hide");
            }
        }
    </script>
}










