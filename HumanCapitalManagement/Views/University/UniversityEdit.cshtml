    <script type="text/javascript">
        function GetDataFaculty() {
            var lstData = {
                id: GetValueTextBox("txtFacultyid"),
                IdEncrypt: ko.toJS(viewModel.IdEncrypt),
                fa_name_id: GetValDropdown("ddlFaculty"),
                fa_display_name: GetValueTextBox("txtFacultyName"),
                decs: GetValTextArea("txtFacultyDes"),
                active_status: GetValRadioListICheck("rdlStatusFaculty"),
            }
            return lstData;

        }
        function SaveFaculty (){
            var IsPass = true;
            if (!CheckValidateBootstrap("divContentFaculty")) {
                FocusValidateBootstrap("divContentFaculty");
                IsPass = false;
            }
            if (IsPass) {
                BlockUI();
                var Param = GetDataFaculty();
                $.ajax({
                    dataType: AjaxCall.dataType,
                    type: AjaxCall.type,
                    contentType: AjaxCall.contentType,
                    url:'@Url.Action("CreateUniversityFaculty", "University")',
                    data: JSON.stringify({ ItemData : Param }),
                    success: function (respone) {
                        if (respone.result.Status == SysProcess.SessionExpired) {
                            PopupLogin('@Url.Action("Index", "Home")');
                        } else if (respone.result.Status == SysProcess.Success) {
                            DialogSuccess(DialogHeader.Info, DialogMsg.SaveComplete);
                            ClearFaculty();
                            if (respone.result.lstData != undefined && respone.result.lstData != null && respone.result.lstData.length > 0) {
                                $('#gvwDataFaculty').DataTable().clear().draw();
                                $('#gvwDataFaculty').dataTable().fnAddData(respone.result.lstData);
                                $('#gvwDataFaculty').dataTable().fnDraw();
                            }
                            else {
                                $('#gvwDataFaculty').DataTable().clear().draw();
                                $('#gvwDataFaculty').dataTable().fnDraw();
                            }
                        }
                        else if (respone.result.Status == SysProcess.Duplicate){
                            DialogWarning(DialogHeader.Warning, respone.result.Msg);
                        }
                        else {
                            DialogWarning(DialogHeader.Warning, respone.result.Msg);
                        }
                    },
                    error: AjaxCall.error,
                    complete: function (jqXHR, status) {//finaly
                        UnblockUI();
                        $('#gvwDataFaculty').DataTable().columns.adjust().draw();
                        $('#gvwDataFaculty').DataTable().columns.adjust().responsive.recalc();
                    }
                });
            }
        }
        function CopyFaculty() {
            var _getValue = GetValDropdown("ddlFaculty");
            if (_getValue != undefined && _getValue != "") {
                var GetText = GetTextDropdownText("ddlFaculty");
                GetInputByID("txtFacultyName").val(GetText);
                $('#divContentFaculty').bootstrapValidator('revalidateField', GetElementName("txtFacultyName", objControl.txtbox));
            }
        }
        function EditFaculty(sVal) {
            ClearFaculty();
            BlockUI();
            var Param = {
                IdEncrypt: sVal, IdEncrypt_Uni_Id: ko.toJS(viewModel.IdEncrypt) };
                $.ajax({
                    dataType: AjaxCall.dataType,
                    type: AjaxCall.type,
                    contentType: AjaxCall.contentType,
                    url:'@Url.Action("LoadUniversityFaculty", "University")',
                    data: JSON.stringify({ ItemData : Param }),
                    success: function (respone) {
                        if (respone.result.Status == SysProcess.SessionExpired) {
                            PopupLogin('@Url.Action("Index", "Home")');
                        } else if (respone.result.Status == SysProcess.Success) {
                            SetObjectFaculty(respone.result.objData);
                        }
                        else if (respone.result.Status == SysProcess.Duplicate){
                            DialogWarning(DialogHeader.Warning, respone.result.Msg);
                        }
                        else {
                            DialogWarning(DialogHeader.Warning, respone.result.Msg);
                            ClearFaculty();
                        }
                    },
                    error: AjaxCall.error,
                    complete: function (jqXHR, status) {//finaly
                        UnblockUI();
                    }
                });
            }
        function ClearFaculty() {
            GetSelectByID("ddlFaculty").val('');
            GetInputByID("txtFacultyName").val('');
            GetInputByID("txtFacultyid").val('');
            GetTextareaByID("txtFacultyDes").val('');
            $("input[id*=rdlStatusFaculty][value='Y']").iCheck('check');
            $('#divContentFaculty').bootstrapValidator('updateStatus', GetElementName("ddlFaculty", objControl.dropdown), "NOT_VALIDATED");
            $('#divContentFaculty').bootstrapValidator('updateStatus', GetElementName("txtFacultyName", objControl.txtbox), "NOT_VALIDATED");
        }
        function CancelFaculty() {
            BlockUI();
            ClearFaculty();
            setTimeout(function () {
                UnblockUI();
            }, 500);
        }
        function SetObjectFaculty(objData) {
            if (objData != undefined) {
                GetSelectByID("ddlFaculty").val(objData.fa_name_id);
                GetInputByID("txtFacultyName").val(objData.fa_display_name);
                GetInputByID("txtFacultyid").val(objData.id);
                GetTextareaByID("txtFacultyDes").val(objData.decs);
                $("input[id*=rdlStatusFaculty][value='" + objData.active_status+"']").iCheck('check');
            }

        }
    </script>
