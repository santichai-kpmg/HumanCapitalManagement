                //{ "title": "Header", "width": "0%", "className": "dt-left-ctm reorderable", "data": "header", "searchable": false, "orderable": false, "visible":false},
                { "title": "Question", "width": "45%", "className": "dt-left-ctm", "data": "question_text", "searchable": false, "orderable": false, },
