                        $('#gvwDataApprove').DataTable().clear().draw();
                        $('#gvwDataApprove').dataTable().fnDraw();
                        $('div[id$=divTable]').collapse("hide");
                    }
                }
            }
            else {
                $("input[id*=chkStatus][value='" + value.confidentiality_agreement + "']").iCheck('check');
                ko.mapping.fromJS(value, {}, viewModel);
            }

