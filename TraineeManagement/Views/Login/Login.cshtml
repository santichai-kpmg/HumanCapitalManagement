        <script type="text/javascript">
           var objModel = @Html.Raw(Json.Encode(Model));
        $(function () {
            ValidateForm();
           BindData(objModel);
            ko.applyBindings(viewModel);
            $('div[class=login-box]').on('keydown', function (e) {
                if (e.which == 13) { //e.which = keyCode (ENTER : 13)
                    if (typeof Login == 'function') {

                        try {
                            Login();
                        }
                        catch (err) {
                            // Handle error(s) here

                        }
                    }
                    //e.preventDefault();
                }

            });
        });
        function ValidateForm() {
            var objValidatePopUp = {};
            objValidatePopUp[GetElementName("txtuser", objControl.txtbox)] = addValidate_notEmpty("This value is not valid");
            objValidatePopUp[GetElementName("txtpassword", objControl.txtbox)] = addValidate_notEmpty("This value is not valid");
            BindValidateBootstrap("divContent", objValidatePopUp);
        }
        function Login() {
            BlockUI();
            var IsPass = true;
            if (!CheckValidateBootstrap("divContent")) {
                FocusValidateBootstrap("divContent");
                IsPass = false;
            }
            if (IsPass) {

                    var Param = ko.toJS(viewModel);
                $.ajax({
                    dataType: AjaxCall.dataType,
                    type: AjaxCall.type,
                    //async: false,
                    contentType: AjaxCall.contentType,
                    url:'@Url.Action("ajLogin", "Login")',
                    data: JSON.stringify({ ItemData : Param }),
                    success: function (respone) {
                        if (respone.result.Status == SysProcess.Success) {
                         window.location.href = '@Url.Action("Index", "Home")';
                        }
                        else {
                            DialogWarning(DialogHeader.Warning, respone.result.Msg);
                        }
                    },
                    error: AjaxCall.error,
                    complete: function (jqXHR, status) {//finaly
                        UnblockUI();
                    }
                });
            }
        }

        </script>
        @*Script for bind Data KnockOut*@
        <script type="text/javascript">
        var viewModel = {

        };
        function ViewModel() {
            var self = this;
            self.conditionChecked = ko.observable(false);
            self.loadCondition = function () {
                //ajax request to get condition value. Suppose ajax request returned value "used". so
                self.conditionChecked("used");
            }
            self.loadCondition();
        }
        function BindData(value) {
            if (viewModel.Id == undefined) {
                viewModel = ko.mapping.fromJS(value);
                ViewModel();

            }
            else {
                ko.mapping.fromJS(value, {}, viewModel);

            }
        }
        </script>
