    <script type="text/javascript">

        function AddQuestion() {
            var IsPass = true;
            if (!CheckValidateBootstrap("divUser")) {
                IsPass = false;
                // $('#divUser').bootstrapValidator('updateStatus', GetElementName("txtSearch", objControl.txtbox), "INVALID");
            }
            if (IsPass) {
                var lstNowRea = $('#gvwDataAnswer').dataTable().fnGetData();
                var objAddData = {
                    nID: 1,
                    //header: GetInputByID("txtSearch").val(),
                    answer: GetTextareaByID("txtDesuser").val(),
                    other_text: GetTextDropdownText("dllOther"),
                    other_answer: GetValDropdown("dllOther"),
                    question_text: GetTextDropdownText("dllSet"),
                    question_id: GetValDropdown("dllSet"),
                };

                if (lstNowRea != undefined && lstNowRea.length > 0) {
                    var nMax = Enumerable.From(lstNowRea).Max(function (x) { return x.nID }) + 1;
                    objAddData.nID = nMax;
                    lstNowRea.push(objAddData);
                }
                else {
                    lstNowRea = objAddData;
                }
                BindQuestion(lstNowRea);
                ClearText();
            }
        }
        function ClearText() {
            // GetInputByID("txtSearch").val('');
            GetSelectByID("dllSet").val('');
            GetSelectByID("dllOther").val('N');
            GetTextareaByID("txtDesuser").val('');
            $('#divUser').bootstrapValidator('updateStatus', GetElementName("dllSet", objControl.dropdown), "NOT_VALIDATED");
            $('#divUser').bootstrapValidator('updateStatus', GetElementName("txtDesuser", objControl.txtarea), "NOT_VALIDATED");
