                    //$Accept.text(strReturnAccept);
                }
                else {
                    // $Accept.text('Not specify.');
                }
                SaveData();
                //$("#PopupSave").modal();
            }
        }

        function GetData() {
            var lstData = "";
            Enumerable.From(objlstData).Where(function (w) { return w.statusvalue == "Y" }).ForEach(function (ed) {
                lstData += ed.Id + ",";
            });

            return lstData;
        }

    </script>
